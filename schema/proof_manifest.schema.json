{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SAVI Proof Manifest",
  "type": "object",
  "required": ["proof_id","date_utc","build","runtime","data","eval","audit_log","anchors"],
  "properties": {
    "proof_id": {"type":"string"},
    "date_utc": {"type":"string"},
    "build": {
      "type":"object",
      "required": ["image_sha256"],
      "properties": {"image_sha256":{"type":"string"}}
    },
    "runtime": {"type":"object"},
    "data": {
      "type":"object",
      "required": ["nonce","inputs_ref"],
      "properties": {"nonce":{"type":"string"}, "inputs_ref":{"type":"string"}}
    },
    "eval": {"type":"object"},
    "witnesses": {"type":"array"},
    "audit_log": {
      "type":"object",
      "required": ["merkle_root"],
      "properties": {"merkle_root":{"type":"string"}}
    },
    "anchors": {"type":"object"}
  }
}